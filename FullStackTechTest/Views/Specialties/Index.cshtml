@model List<Models.Specialty>;
@{
    ViewData["Title"] = "Specialties";
}

<div class="container">
    <h2>Specialties</h2>
    <a class="btn btn-primary mb3" asp-action="Create">Add New Specialty</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th style="width:180px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var specialty in Model)
            {
                <tr>
                    <td>@specialty.Name</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@specialty.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@specialty.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this specialty?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>